      "parameters": {
        "jsCode": "for (const item of $input.all()) {\n  try {\n    const parsed = typeof item.json.jsons === 'string'\n      ? JSON.parse(item.json.jsons)\n      : item.json.jsons;\n\n    // Função para tentar corrigir encoding duplo e remover caracteres inválidos\n    const fixEncoding = (text) => {\n      if (typeof text !== 'string') return text;\n\n      // 1️⃣ Tenta corrigir UTF-8 duplamente interpretado (Ã© → é)\n      let fixed = text\n        .replace(/Ã©/g, 'é')\n        .replace(/Ãª/g, 'ê')\n        .replace(/Ã¨/g, 'è')\n        .replace(/Ã¡/g, 'á')\n        .replace(/Ã¢/g, 'â')\n        .replace(/Ã£/g, 'ã')\n        .replace(/Ãº/g, 'ú')\n        .replace(/Ã¹/g, 'ù')\n        .replace(/Ã³/g, 'ó')\n        .replace(/Ã´/g, 'ô')\n        .replace(/Ãµ/g, 'õ')\n        .replace(/Ã§/g, 'ç')\n        .replace(/Ã‰/g, 'É')\n        .replace(/Ãª/g, 'Ê')\n        .replace(/Ã€/g, 'À')\n        .replace(/Ã/g, 'Á')\n        .replace(/Ãƒ/g, 'Ã')\n        .replace(/Ã•/g, 'Õ')\n        .replace(/Ã\"/g, 'Â')\n        .replace(/â€“/g, '–')\n        .replace(/â€”/g, '—')\n        .replace(/â€œ/g, '“')\n        .replace(/â€/g, '”')\n        .replace(/â€˜/g, '‘')\n        .replace(/â€™/g, '’');\n\n      // 2️⃣ Remove o caractere “�” e outros não-printáveis\n      fixed = fixed.replace(/[^\\x20-\\x7EÀ-ÿ]/g, '');\n\n      return fixed.trim();\n    };\n\n    // 3️⃣ Aplica a limpeza recursivamente em todo o objeto\n    const deepClean = (obj) => {\n      if (Array.isArray(obj)) return obj.map(deepClean);\n      if (obj && typeof obj === 'object') {\n        const cleaned = {};\n        for (const k in obj) cleaned[k] = deepClean(obj[k]);\n        return cleaned;\n      }\n      return fixEncoding(obj);\n    };\n\n    const cleaned = deepClean(parsed);\n\n    item.json = {\n      ...item.json,\n      ...cleaned,\n    };\n\n    delete item.json.jsons; // opcional\n  } catch (err) {\n    item.json.parse_error = `Erro ao parsear JSON: ${err.message}`;\n  }\n}\n\nreturn $input.all();"
